{
    "name": "conquest/flash",
    "description": "This is my package flash",
    "keywords": [
        "conquest",
        "laravel",
        "flash"
    ],
    "homepage": "https://github.com/jdw5/conquest-flash",
    "license": "MIT",
    "authors": [
        {
            "name": "Joshua Wallace",
            "email": "josh@joshua-wallace.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "conquest/core": "^0.3.0",
        "illuminate/session": "^10.0||^11.0"
    },
    "require-dev": {
        "laravel/pint": "^1.14",
        "larastan/larastan": "^2.9",
        "pestphp/pest": "^2.34",
        "pestphp/pest-plugin-arch": "^2.7",
        "pestphp/pest-plugin-laravel": "^2.3",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan-deprecation-rules": "^1.1",
        "phpstan/phpstan-phpunit": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "Conquest\\Flash\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Conquest\\Flash\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "clear": "@php vendor/bin/testbench package:purge-flash --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": [
            "@composer run prepare",
            "@php vendor/bin/testbench workbench:build --ansi"
        ],
        "start": [
            "Composer\\Config::disableProcessTimeout",
            "@composer run build",
            "@php vendor/bin/testbench serve"
        ],
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Conquest\\Flash\\FlashServiceProvider"
            ],
            "aliases": {
                "Flash": "Conquest\\Flash\\Facades\\Flash"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
